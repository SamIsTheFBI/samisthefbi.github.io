const title = "Home | SamIsTheFBI"
---

<Base title={title} description="Fancy home page">
  <section class="sm:mt-5">
    <a href="/about" class="text-5xl md:text-6xl font-serif" transition:name="my_name">Shivam Shekhar Soy</a>
