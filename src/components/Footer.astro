const getCopyLeftYear = async() => {
  const res = await fetch("https://api.github.com/repos/samisthefbi/samisthefbi.github.io") /* TODO: Don't hardcode this maybe */
  const data = await res.json()

  const date = new Date()
  const currentYear = date.getFullYear()
  const createdYear = data.created_at.substring(0, data.created_at.indexOf('-'))
  const updatedYear = data.updated_at.substring(0, data.created_at.indexOf('-'))
  
  const copyLeftYear = currentYear === updatedYear ? `${currentYear}` : `${createdYear}-${updatedYear}`
  return copyLeftYear
}

const copyLeftYear = getCopyLeftYear()

