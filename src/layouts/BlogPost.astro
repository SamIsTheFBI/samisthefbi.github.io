---
import BaseHead from '@components/BaseHead.astro'
import NavBar from '@components/NavBar.astro'
import Footer from '@components/Footer.astro'
import FormattedDate from '@components/FormattedDate.astro'
import '../base.css'
import { Image } from 'astro:assets'

const { title, author, description, pubDate, updatedDate, heroImage } = Astro.props
---

<html lang="en">
  <BaseHead title={title} description={description} />
  <body class="text-slate-300 bg-[#1a232e]">
    <NavBar />
    <main class="mt-[65px] w-[100%] px-8 py-3 pb-14 h-[100%]">
			<section class="max-w-3xl mx-auto">
				<span onclick="history.back()" class="font-poppins cursor-pointer font-bold hover:text-red-400 my-3">‚Üê Go Back</span>
				{
					heroImage && 
					<div class="my-6">
						<Image 
							class="border-b-4 border-r-4 border-red-400 object-cover rounded-xl" 
							src={heroImage.url} 
							width={1200} 
							height={600} 
							alt={heroImage.alt}
							format='avif'
							quality={30}
						/>
					</div>
				}
				<h1 class="text-6xl sm:text-7xl mt-3 mb-6 font-jost font-semibold text-white">{title}</h1>
				<div class="text-stone-400 my-6 mt-3 border-y-2 border-slate-50/[0.06] py-2">
					<div class="">By {author}</div>
					<date class="flex items-center gap-1">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="text-sm">
									( last updated on <FormattedDate date={updatedDate} />)
								</div>
							)
						}
					</date>
				</div>
				<article class="prose prose-slate dark:prose-invert lg:prose-xl prose-h1:font-medium prose-img:border-2 prose-img:border-red-400 prose-h2:heading-underline prose-h2:underline-offset-8 sm:prose-h2:underline-offset-[10px]">
					<slot />
				</article>
			</section>
		</main>
    <Footer />
  </body>
</html>